{
    "packages": {
        ".": {
            "release-type": "simple",
            "changelog-sections": [
                {
                    "type": "feat",
                    "section": "✨ Нововведения",
                    "hidden": false
                },
                {
                    "type": "fix",
                    "section": "🐞 Исправления",
                    "hidden": false
                },
                {
                    "type": "perf",
                    "section": "⚡ Улучшение производительности",
                    "hidden": false
                },
                {
                    "type": "revert",
                    "section": "⏪ Отмена изменений",
                    "hidden": false
                },
                {
                    "type": "chore",
                    "section": "🔧 Прочее",
                    "hidden": true
                },
                {
                    "type": "test",
                    "section": "✅ Тесты",
                    "hidden": true
                },
                {
                    "type": "ci",
                    "section": "🤖 CI",
                    "hidden": true
                }
            ],
            "pull-request-title-pattern": "chore: v${version}",
            "pull-request-header": "🤖 Автоматический релиз, созданный **[Release Please](https://github.com/googleapis/release-please-action)**",
            "pull-request-footer": "Релиз сформируется после объединения с `main`."
        }
    }
}